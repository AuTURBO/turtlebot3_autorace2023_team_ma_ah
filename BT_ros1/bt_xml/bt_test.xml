<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="3"
      main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <SetBlackboard value="-1.579;-1.5;0.0;1.0"
                     output_key="Goal_a"/>
      <SetBlackboard value="1.5;1.5;0.0;1.0"
                     output_key="Goal_b"/>
      <SetBlackboard value="-1.5;1.5;0.0;1.0"
                     output_key="Goal_c"/>
      <Fallback>
        <ReactiveSequence>
          <InterruptEvent event="traffic"/>
          <Repeat num_cycles="10">
            <Sequence>
              <SubTree ID="MoveRobot"
                       target="Goal_a"/>
              <SubTree ID="MoveRobot"
                       target="Goal_b"/>
            </Sequence>
          </Repeat>
        </ReactiveSequence>
        <Sequence>
          <SaySomething message="신호등 미션 시작 "/>
          <SubTree ID="MoveRobot"
                   target="Goal_c"/>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="MoveRobot">
    <Sequence name="SetGoal">
      <MoveBase goal="{target}"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="InterruptEvent"
            editable="true">
      <input_port name="event"/>
    </Action>
    <Action ID="MoveBase"
            editable="true">
      <input_port name="goal"/>
    </Action>
    <Action ID="SaySomething"
            editable="true">
      <input_port name="message"/>
    </Action>
  </TreeNodesModel>

</root>
