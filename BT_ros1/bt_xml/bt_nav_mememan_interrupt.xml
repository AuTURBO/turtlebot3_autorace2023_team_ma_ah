<root main_tree_to_execute = "MainTree">
    <BehaviorTree ID="MainTree">
        <Sequence>
            <SetBlackboard output_key="Goal_a" value="-0.579;-0.5;0.0;1.0" />
            <SetBlackboard output_key="Goal_b" value="0.5;0.5;0.0;1.0" />
            <SetBlackboard output_key="Goal_c" value="-1.5;1.5;0.0;1.0" />
            <Fallback>
                <ReactiveSequence>
                    <InterruptEvent event="gghggh"/>
                    <Repeat num_cycles="10">
                        <Sequence>
                            <SubTree ID="MoveRobot" target="Goal_a" />
                            <SubTree ID="MoveRobot" target="Goal_b" />
                            <!-- <SubTree ID="MoveRobot" target="Goal_c" /> -->
                        </Sequence>
                    </Repeat>
                </ReactiveSequence>
                <Sequence>
                    <SubTree ID="MoveRobot" target="Goal_c" />
                </Sequence>
            </Fallback>
        </Sequence>
    </BehaviorTree>

    <BehaviorTree ID="MoveRobot">
        <Sequence name="SetGoal">
            <MoveBase goal="{target}" />
        </Sequence>
    </BehaviorTree>
</root>